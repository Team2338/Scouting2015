<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.frc2338.nathan.scouting.Alerts"
    android:background="#ff02243e"
    android:padding="5dp"
    android:gravity="center_vertical|center_horizontal">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ffbebebe"
        android:id="@+id/alert"
        android:layout_above="@+id/space11"
        android:layout_alignParentTop="true"
        android:textSize="20dp"
        android:gravity="center_vertical|center_horizontal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="NO"
        android:id="@+id/no"
        android:textColor="#ff000000"
        android:background="#ffff6400"
        android:onClick="cancel"
        android:focusable="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/space11"
        android:layout_toLeftOf="@+id/space11" />

    <Space
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_above="@+id/no"
        android:layout_centerHorizontal="true"
        android:id="@+id/space11" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="YES"
        android:id="@+id/yes"
        android:background="#ffbebebe"
        android:textColor="#ff000000"
        android:onClick="ok"
        android:focusable="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/space11"
        android:layout_toEndOf="@+id/space11" />

</RelativeLayout>

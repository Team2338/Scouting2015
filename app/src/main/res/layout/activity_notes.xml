<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.frc2338.nathan.scouting.Auto"
    android:background="#ff00243e">

    <Space
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:id="@+id/space18"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="197dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Notes"
        android:id="@+id/submitButton"
        android:background="#fffe6400"
        android:textColor="#ff000000"
        android:onClick="submit"
        android:layout_below="@+id/space19"
        android:layout_centerHorizontal="true"
        android:focusable="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Enter Notes:"
        android:id="@+id/notesLabel"
        android:textColor="#ffb4b4b4"
        android:layout_below="@+id/matchLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Team #:"
        android:id="@+id/matchLabel"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#ffb4b4b4" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/TeamNumber"
        android:layout_above="@+id/notesLabel"
        android:layout_toRightOf="@+id/matchLabel"
        android:layout_toLeftOf="@+id/submitButton"
        android:layout_toStartOf="@+id/submitButton"
        android:maxLength="4"
        android:maxLines="1"
        android:background="#ffc8c8c8"
        android:textColor="#ff000000"
        android:focusable="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="top"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/notes"
        android:layout_below="@+id/notesLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#ff000000"
        android:background="#ffc8c8c8"
        android:layout_above="@+id/space18"
        android:focusable="true" />

    <Space
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignTop="@+id/space18"
        android:layout_alignLeft="@+id/submitButton"
        android:layout_alignStart="@+id/submitButton"
        android:id="@+id/space19" />
    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/logo"
        android:src="@drawable/logo"
        android:longClickable="false"
        android:clickable="true"
        android:onClick="team2338"
        android:layout_below="@+id/space19"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:focusable="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Intended for use separate from rest of app"
        android:id="@+id/disclaimer"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/space19"
        android:layout_toRightOf="@+id/space19"
        android:textColor="#ff7f7f7f" />
</RelativeLayout>
